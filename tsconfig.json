{
  "compilerOptions": {
    "target": "es5",
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "jsx": "react",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["./src/scripts"]
}
